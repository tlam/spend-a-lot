<!DOCTYPE html>
<html>
<head>
  <title>SpendALot</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <h1><%= link_to "Spend a Lot", home_path %></h1>
    <div id="top-navigation">
      <div><%= link_to "Expenses", expenses_path %></div>
      <div><%= link_to "Categories", categories_path %></div>
      <div><%= link_to "Keywords", keywords_path %></div>
      <div><%= link_to "Statements", statements_path %></div>
    </div>
  </div>
  <div id="content">
    <% if flash.notice %>
    <div id="flash-messages">
      <%= flash.notice %>
    </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
