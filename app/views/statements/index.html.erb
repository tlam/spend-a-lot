<h2>Credit Card Statement</h2>

<% if flash.notice %>
  <%= flash.notice %>
<% end %>

<% form_for(:statements, :url => {:action => "upload"}, :html => {:multipart => true}) do |form| %>
  <fieldset>
    <legend><b>Upload</b></legend>
    <%= file_field "upload", "datafile" %>
    <%= submit_tag "Upload" %>
  </fieldset>
<% end %>

<h3>List of files</h3>
<% @files.each do |file| %>
  <div><%= file %></div>
<% end %>
