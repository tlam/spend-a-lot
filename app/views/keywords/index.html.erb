<table>
  <tr>
    <th>Words</th>
    <th>Category</th>
    <th></th>
    <th></th>
  </tr>

<% @keywords.each do |keyword| %>
  <tr>
    <td><%= link_to keyword.words, edit_keyword_path(keyword) %></td>
    <td><%= keyword.category.name if keyword.category %></td>
    <td><%= link_to 'Destroy', keyword, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

