<h1>Listing expenses</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Payment</th>
    <th>Amount</th>
    <th>Date</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%= link_to expense.description, edit_expense_path(expense) %></td>
    <td><%= expense.payment_display %></td>
    <td><%= expense.amount_display %></td>
    <td><%= expense.date %></td>
    <td><%= expense.category.name %></td>
    <td><%= link_to 'Show', expense %></td>
    <td><%= link_to 'Destroy', expense, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

